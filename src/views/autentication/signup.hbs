<div class="container p-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="mt-3">
                            <input type="text" name="nombre" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="mt-3">
                            <input type="number" name="numbePhone" placeholder="Telefono"   class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="email" name="email" placeholder="Email" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="text" name="nickname" placeholder="Nickame" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="date" name="birthayDate" placeholder="BirthdayDate" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="number" name="ruc" placeholder="Cedula" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success btn-block w-100">
                                Registrarse 
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>