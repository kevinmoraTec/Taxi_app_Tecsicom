<div class="container p-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp Drivers</h3>
                </div>
                <div class="card-body">
                     <img src="/img/conductor-de-taxi.png" alt="ImgLogoPerfilDriver" class="card-img-top mx-auto m-2 w-50">
                    <form action="/signupDrives" method="POST">
                        <div class="mt-3">
                            <input type="text" name="nombre" placeholder="Full Name" class="form-control" autofocus>
                        </div>
                        <div class="mt-3">
                            <input type="text" name="nickname" placeholder="Nickname"   class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="text" name="placa" placeholder="PlacaDriver" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="number" name="ruc" placeholder="Cedula" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="number" name="numeroPhone" placeholder="Telefono" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="email" name="email" placeholder="Correo" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="mt-3">
                            <input type="date" name="dateBirthay" placeholder="Fecha Nacimiento" class="form-control">
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success btn-block w-100">
                                Registrarse 
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>