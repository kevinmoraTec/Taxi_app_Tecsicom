<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card mt-4 text-center">
                <div class="card-header">
                    Ingresa tu Direccion Actual y Direccion  ddestino
                </div>
                <div class="mt-3">
                    <form action="/peti/edit/{{edit.idRequest}}" method="POST">
                        <div class="mt-3">
                            <input type="text" value="{{edit.StartDirection}}" class="form-control" name="startDireccion"  placeholder="Direccion Actual" autofocus>
                        </div>
                        <div class="mt-3">
                            <input type="text" value="{{edit.FinalDirection}}" class="form-control" name="finalDireccion" placeholder="Direccrion Destino" >
                        </div>
                        <div class="mt-3">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Instrucciones Especiales">{{edit.Descriptions}}</textarea>
                        </div>
                        <div class="mt-3">
                            <input type="hidden" name="fechaPeticion" value="${new Date()}">
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success btn-block w-100">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>